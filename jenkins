pipeline {
	agent none
	 environment {
	 BRANCH = 'main'
	 GIT_REPO = 'https://github.com/vijaybc98/c-project.git'
         }
       	stages {
            stage('build') {
		 agent { label 'master' }
		 steps { 
		      git branch: $env.BRANCH , url: $env.GIT_REPO
		      echo "$BUILD_ENV"
		      sh '''
		       #!/bin/bash
		        pwd 
			ls
			''' 
		}
            }
 	     stage('deploy') {
	         agent { label 'slave1' }
	         steps {
                     echo "this is a deploy stage"
		     echo "$BRANCH" 
	          }
	      }
          }
      }
   

	
	
                 
