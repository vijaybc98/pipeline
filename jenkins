pipeline {
	agent none
	stages {
            stage('stage_a') {
		 agent { label 'master' }
		  steps {
		      catchError(stage_aResult: 'SUCCESS', stageResult: 'FAILURE') {
		       echo "this is stage_a"
		       sh '''
		        #!/bin/bash
		        pwd  
			ls
		        exit 1
			'''
		      }
		  }
             }
 	     stage('stage_b') {
	         agent { label 'master' }
	         steps {
                     echo "this is stage_b" 
	          }
	      }
             stage('stage_c') {
	         agent { label 'slave1' }
	         steps {
                     echo "this is stage_c" 
	          }
	      }
	 }
      }
   

	
	
                 
