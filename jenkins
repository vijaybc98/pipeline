pipeline {
	agent none
	stages {
            stage('stage_A') {
		 agent { label 'master' }
		  steps {
		       echo "this is stage_A"
		       sh '''
		        #!/bin/bash
		        pwd  
			ls
		        exit 1
			'''
		      }
		  }
             }
 	     stage('stage_B') {
	      agent { label 'master' }
	       when {
	          expression{stage_AResult: 'SUCCESS'}
	           }
		   steps {
                     echo "this is stage_B" 
	          }
	      }
             stage('stage_C') {
	      when {
	          expression{stage_AResult: 'FAILURE'}
	           }
	         agent { label 'slave1' }
	         steps {
                     echo "this is stage_C" 
	          }
	      }
	 }
      }
   

	
	
                 
