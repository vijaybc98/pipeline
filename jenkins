boolean stageA=true
pipeline{
    agent any
    parameters {
        choice choices: ['success', 'fail'], description: 'set \'A\' stage status', name: 'sta_A'
    }

    stages{
        stage('A'){
            steps{
            script{
                try{
                echo 'Stage A is Running'
                if(sta_A == 'success'){
                    sh 'exit 1'
                }else{
                    sh 'exit 0'
                }
            }catch(Exception e){
                echo 'Stage (A) success'
                stageA=true
               }
            }
          }
        }

        stage('B'){
            when {
                expression {
                    stageA == true
                }
            }
            steps{
                echo 'Stage B is running'
            }
        }

        stage('C'){
            when {
                expression {
                    stageA == false
                }
            }
	      steps{
                echo 'Stage C is running'
            }
        }
    }
}
