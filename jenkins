pipeline {
	agent none
	stages {
            stage('build') {
		 agent { label 'master' }
		 steps { 
		  echo "this is build stage"
		       sh '''
		       #!/bin/bash
		        pwd 
			ls
		
			'''
		  }
            }
 	     stage('deploy') {
	         agent { label 'slave1' }
	         steps {
                     echo "this is a deploy stage" 
	          }
	      }
          }
      }
   

	
	
                 
