pipeline {
	agent none
	stages {
            stage('stage-A') {
		 agent { label 'master' }
		  steps {
		      catchError(stage-AResult: 'SUCCESS', stageResult: 'FAILURE') {
		       echo "this is stage-A"
		       sh '''
		        #!/bin/bash
		        pwd  
			ls
		        exit 1
			'''
		      }
		  }
             }
 	     stage('stage-B') {
	         agent { label 'master' }
	         steps {
                     echo "this is stage-B" 
	          }
	      }
             stage('stage-C') {
	         agent { label 'slave1' }
	         steps {
                     echo "this is stage-C" 
	          }
	      }
	 }
      }
   

	
	
                 
