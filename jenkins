pipeline {
	agent none
	stages {
            stage('stage-a') {
		 agent { label 'master' }
		  steps {
		      catchError(stage-aResult: 'SUCCESS', stageResult: 'FAILURE') {
		       echo "this is stage-a"
		       sh '''
		        #!/bin/bash
		        pwd  
			ls
		        exit 1
			'''
		      }
		  }
             }
 	     stage('stage-b') {
	         agent { label 'master' }
	         steps {
                     echo "this is stage-b" 
	          }
	      }
             stage('stage-c') {
	         agent { label 'slave1' }
	         steps {
                     echo "this is stage-c" 
	          }
	      }
	 }
      }
   

	
	
                 
