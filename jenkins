pipeline {
    agent any
    stages {
        stage ('BUILD') {
            when {
                branch 'branch1'
            }
            steps {
                echo "this is build stage"   
            }
        }
        stage ('DEPLOY') {
            when {
                branch 'branch1'
            }
            steps {
                sh'''
                echo "this is deploy stage"
                '''
            }
        }     
        stage ('TEST1') {
            when {
                branch 'master'
            }
            steps {
            echo "this is test1 stage" 
            }
          }  
          stage ('TEST1') {
            when {
                branch 'master'
            }
            steps {
            echo "this is test2 stage" 
            }
          }  
      }       
  }
      

         
