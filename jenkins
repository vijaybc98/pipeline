pipeline {
	agent none
	stages {
             stage('build') {
	         agent { label 'master' }
		 steps { 
		     sh '''
		        #!/bin/bash
		        pwd
		        ls
		        echo " this is build stage "
		        '''
		       }
		}
 	     stage('deploy') {
	      parallel {
	         agent { label 'slave1' }
	         steps {
                     echo "this is a deploy stage"
	               }
	         }
             stage('testing') {
	          agent any
                  steps {
                       sh 'echo "this is a testing stage"'
                       }
                 }
               }
	     
	    }
	  }
