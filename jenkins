pipeline {
    agent any
    stages {
         stage('build') {
	     steps { 
		sh '''
		   #!/bin/bash
		     pwd
		     ls
		     echo " this is build stage "
		   '''
		     }
		}
 	 stage('deploy') {
	    steps {
              echo "this is a deploy stage"
	          }
	      }
         stage('testing') {
             steps {
                 sh 'echo "this is a testing stage"'
                    }
               }
             }
